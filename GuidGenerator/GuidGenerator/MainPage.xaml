<UserControl x:Class="GuidGenerator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="169" d:DesignWidth="374">

    <Grid x:Name="LayoutRoot" Background="#FF837E7E" Height="172" HorizontalAlignment="Left" Width="374">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="126*" />
            <ColumnDefinition Width="44*" />
            <ColumnDefinition Width="230*" />
        </Grid.ColumnDefinitions>
        <TextBox Height="92" Margin="93,34,12,0" Name="txtInput" VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <TextBox Height="23" Margin="93,132,12,0" Name="txtGUID" VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <Button Height="23" HorizontalAlignment="Left" Margin="12,132,0,0" Name="btnGUID" VerticalAlignment="Top" Width="75" Click="btnGUID_Click">GUID</Button>
        <TextBlock Text="Input string (for deterministic GUID):" TextWrapping="Wrap" Margin="93,12,10,0"  VerticalAlignment="Top" Grid.ColumnSpan="3" />
        <Button Height="23" HorizontalAlignment="Left" Margin="12,103,0,0" Name="btnClear" VerticalAlignment="Top" Width="75" Click="btnClear_Click">Clear</Button>

    </Grid>
</UserControl>
